
int main()
{
    int i,j,k,s[3][3],c[8],min1;
    for(i=0;i<3;i++)
    {
        for(j=0;j<3;j++)
            scanf("%d",&s[i][j]);
    }
    int d[8][3][3]={ {{8,1,6},{3,5,7},{4,9,2}}, {{6,1,8},{7,5,3},{2,9,4}}, {{4,9,2},{3,5,7},        {8,1,6}}, {{2,9,4},{7,5,3},{6,1,8}}, {{8,3,4},{1,5,9},{6,7,2}}, {{4,3,8},{9,5,1},{2,7,6}},  {{6,7,2},{1,5,9},{8,3,4}}, {{2,7,6},{9,5,1},{4,3,8}} }; 
    
    for(k=0;k<8;k++) 
    {
        c[k] = 0;
        for(i=0;i<3;i++)
        {
            for(j=0;j<3;j++) 
             { 
                if(s[i][j]!=d[k][i][j])
                { 
                c[k]+=abs(s[i][j]-d[k][i][j]); 
                 } 
             } 
        } 
    }
    min1 = c[0]; 
    for(i=1;i<8;i++)
    { 
        if(c[i]<min1) 
        { 
            min1=c[i];
        }
    }
    printf("%d",min1);
    return 0; 
}
